{
    "manifest_version": 2,
    "name": "ChromeExtensions",
    "version": "0.1",

    "description": "desk",

    "permissions": [
        "tabs",
        "bookmarks",
        "http://www.blogger.com/",
        "http://*.google.com/",
        "unlimitedStorage",
      "activeTab",
      "<all_urls>"
    ],


    "icons": {
        "128": "icon.png"
    },

    "content_scripts": [
        {
            "matches": [ "*://*/*" ],
            "js": [ "content.js", "libraries/jquery.min.js"  ]

        }
    ],

    "background": {
        "scripts": ["background.js"]
    },

    "browser_action": {
        "default_title": "abracadabra",
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    }
}
